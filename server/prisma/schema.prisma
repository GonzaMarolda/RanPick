generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  password  String?
  googleId  String? @unique
  imagePath String?
  wheels    Wheel[]
}

model Wheel {
  id              String   @id 
  userId          Int     
  user            User     @relation(fields: [userId], references: [id])
  name            String  
  fatherWheelId   String?
  fatherWheel     Wheel?   @relation("FatherChild", fields: [fatherWheelId], references: [id])
  childrenWheels  Wheel[]  @relation("FatherChild")
  fatherEntryId   String?  @unique
  fatherEntry     Entry?   @relation("EntryNestedWheel", fields: [fatherEntryId], references: [id]) 
  entries         Entry[]  @relation("WheelEntry")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Entry {
  id            String  @id 
  name          String
  wheelId       String     
  wheel         Wheel   @relation("WheelEntry", fields: [wheelId], references: [id])
  nestedWheelId String? @unique
  nestedWheel   Wheel?  @relation("EntryNestedWheel")
  weight        Float
  color         String 
}   
